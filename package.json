{
  "name": "unixtime",
  "version": "4.0.5",
  "main": "main.js",
  "targets": {
    "main": false
  },
  "repository": "git@github.com:klausbreyer/unixtime.app.git",
  "author": "Klaus Breyer <kb@v01.io>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@parcel/packager-raw-url": "2.7.0",
    "@parcel/transformer-webmanifest": "2.7.0",
    "electron": "^20.0.2",
    "electron-builder": "^23.3.3",
    "parcel": "^2.7.0",
    "posthtml-doctype": "^1.1.1",
    "posthtml-include": "^1.7.4"
  },
  "scripts": {
    "build-parcel": "rm -rf dist-parcel && parcel  build src/index.html --public-url . --dist-dir dist-parcel && cp src/images/* dist-parcel/images/ && cp src/pwabuilder-sw.js dist-parcel && cp src/favicon.ico dist-parcel"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {},
  "build": {
    "appId": "app.unixtime",
    "mac": {
      "target": [
        {
          "target": "mas",
          "arch": "universal"
        }
      ],
      "mergeASARs": false,
      "category": "public.app-category.developer-tools"
    },
    "mas": {
      "type": "distribution",
      "provisioningProfile": "embedded.provisionprofile",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist"
    }
  }
}
